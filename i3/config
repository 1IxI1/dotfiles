# Audio output switcher
set $sink1 alsa_output.pci-0000_00_1b.0.analog-stereo
set $sink2 alsa_output.usb-Logitech_Logitech_G430_Gaming_Headset-00.analog-stereo
bindsym $mod+o exec "if pactl info | grep -q $sink2; then pacmd set-default-sink $sink1; else pacmd set-default-sink $sink2; fi"

# Assign apps to workspaces
assign [class="Qbittorrent"] → $ws5
assign [class="Firefox"] → $ws1
assign [class="jetbrains-phpstorm" window_type="normal"] → $ws3
assign [class="jetbrains-webstorm" window_type="normal"] → $ws3
assign [class="jetbrains-goland" window_type="normal"] → $ws3
assign [class="discord"] → $ws4

assign [class="Rhytmbox"] → $ws3
assign [class="Transmission-gtk"] → $ws5
assign [class="Qbittorrent"] → $ws5

# Start default apps with correct layouts
bindsym $mod+a rename workspace 1 to $w1; \
exec --no-startup-id subl3; \
exec --no-startup-id discord; \
rename workspace 2 to $w2; \
rename workspace 4 to $w4; \
workspace $w2; \
exec "sh -c 'sleep 0.1; exec mate-terminal'"; \
exec "sh -c 'sleep 0.2; exec mate-terminal'"; \
workspace $w1

